# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# Go files
[*.go]
indent_style = tab
indent_size = 4

# YAML and JSON files
[*.{yml,yaml,json}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Git config files
[.git*]
indent_size = 2

# GitHub workflow files
[.github/**/*.yml]
indent_size = 2
